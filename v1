<head>
  <meta charset="utf-8"/>
  <title>Dashboard CGU/TCU</title>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://unpkg.com/tabulator-tables@5.6.1/dist/css/tabulator_tailwind.min.css" rel="stylesheet">
  <script src="https://unpkg.com/tabulator-tables@5.6.1/dist/js/tabulator.min.js"></script>
</head>
<body class="bg-gray-100 text-gray-800 p-6">
  <div class="max-w-6xl mx-auto space-y-6">
    <h1 class="text-2xl font-bold">Dashboard CGU/TCU</h1>
    <p id="meta" class="text-sm text-gray-500"></p>
    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <h2 class="font-semibold mb-2">CGU (Top 10)</h2>
        <div id="cgu"></div>
      </div>
      <div>
        <h2 class="font-semibold mb-2">TCU (Top 10)</h2>
        <div id="tcu"></div>
      </div>
    </div>
  </div>

<script>
function q(k){return new URLSearchParams(location.search).get(k)||'';}
async function main(){
  const dataUrl = q('data'); if(!dataUrl){document.body.innerHTML='Faltou ?data=...';return;}
  const r = await fetch(dataUrl, {cache:'no-store'}); const payload = await r.json();
  document.getElementById('meta').textContent =
    `Tema: ${payload.tema} · Gerado em: ${new Date(payload.generated_at).toLocaleString('pt-BR')}`;

  new Tabulator("#cgu", {
    data: payload.cgu, layout:"fitColumns", height: "460px",
    columns: [
      {title:"Título", field:"Título", widthGrow:3},
      {title:"Data", field:"Data", width:110},
      {title:"Município", field:"Município", widthGrow:1},
      {title:"Unidade Auditada", field:"Unidade Auditada", widthGrow:1},
      {title:"Órgão", field:"Órgão", width:70},
      {title:"Tipo de Serviço", field:"Tipo de Serviço", width:130},
      {title:"Link", field:"Link", formatter:(c)=>c.getValue()?`<a class="text-blue-600" target="_blank" href="${c.getValue()}">Abrir</a>`:'' , width:70}
    ]
  });

  new Tabulator("#tcu", {
    data: payload.tcu, layout:"fitColumns", height: "460px",
    columns: [
      {title:"Título", field:"Título", widthGrow:3},
      {title:"Ano", field:"Ano", width:80, hozAlign:"center"},
      {title:"Assunto", field:"Assunto", widthGrow:2},
      {title:"Endereço", field:"Endereço", formatter:(c)=>c.getValue()?`<a class="text-blue-600" target="_blank" href="${c.getValue()}">Abrir</a>`:'' , width:70}
    ]
  });
}
main();
</script>
</body>
</html>
